---
import { getLocaleFromUrl, useTranslations } from '../../i18n/utils';

const currentLocale = getLocaleFromUrl(Astro.url);
const t = useTranslations(currentLocale);
const solutions = [
  {
    thumbnail: `${
      import.meta.env.BASE_URL
    }/illustrations/data-maintenance-flatline.svg`,
    title: t.solutions.cloud.title,
    description:
      'Lorem ipsum dolor sit amet consectetur. Malesuada magna ut ullamcorper amet tincidunt volutpat ipsum.',
  },
  {
    thumbnail: `${
      import.meta.env.BASE_URL
    }/illustrations/web-development-flatline.svg`,
    title: t.solutions.web.title,
    description:
      'Lorem ipsum dolor sit amet consectetur. Malesuada magna ut ullamcorper amet tincidunt volutpat ipsum.',
  },
  {
    thumbnail: `${
      import.meta.env.BASE_URL
    }/illustrations/bug-fixed-flatline.svg`,
    title: t.solutions.data.title,
    description:
      'Lorem ipsum dolor sit amet consectetur. Malesuada magna ut ullamcorper amet tincidunt volutpat ipsum.',
  },
];
---

<div class="grid md:grid-cols-2 xl:grid-cols-3 gap-12 md:flex-row md:gap-8">
  {
    solutions.map(({ thumbnail, title, description }) => (
      <div class="flex-1 flex flex-col gap-4">
        <img src={thumbnail} alt={`${title} illustration`} />
        <h2 class="text-2xl font-bold">{title}</h2>
        <p class="text-lg">{description}</p>
      </div>
    ))
  }
</div>

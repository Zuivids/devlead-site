---
import { getLocaleFromUrl, useTranslations } from '../../i18n/utils';
import productImage from '../../assets/product.png';
import { Image } from 'astro:assets';

const currentLocale = getLocaleFromUrl(Astro.url);
const t = useTranslations(currentLocale);

const solutions = [
  {
    thumbnail: productImage,
    title: t.products.credmon.title,
    description: t.products.credmon.description,
  },
  {
    thumbnail: productImage,
    title: t.products.devarch.title,
    description: t.products.devarch.description,
  },
  {
    thumbnail: productImage,
    title: t.products.devblocks.title,
    description: t.products.devblocks.description,
  },

  {
    thumbnail: productImage,
    title: t.products.controlm.title,
    description: t.products.controlm.description,
  },
];
---

<div class="grid md:grid-cols-2 gap-6 md:flex-row md:gap-8">
  {
    solutions.map(({ thumbnail, title, description }) => (
      <div class="flex-1 flex flex-col gap-4 bg-zinc-800 text-white hover:cursor-pointer group">
        <div class="overflow-hidden">
          <Image
            class="group-hover:scale-[1.05] ease-in-out transition duration-500"
            src={thumbnail}
            alt={`${title} illustration`}
          />
        </div>
        <div class="p-8 flex gap-2 flex-col">
          <h2 class="text-2xl border-b-2 pb-4 mb-4 border-zinc-700 font-bold">
            {title}
          </h2>
          <p class="text-md">{description}</p>
        </div>
      </div>
    ))
  }
</div>

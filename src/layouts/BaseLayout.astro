---
import Footer from '../components/common/Footer.astro';
import LocaleHrefMeta from '../components/common/LocaleHrefMeta.astro';
import Navigation from '../components/common/Navigation.astro';
import { getLocaleFromUrl, useTranslations } from '../i18n/utils';
import '@fontsource-variable/overpass';

interface Props {
  title: string;
  description?: string;
}

const locale = getLocaleFromUrl(Astro.url);
const { title, description } = Astro.props;
---

<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <LocaleHrefMeta />
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body
    class="text-zinc-950"
    style="font-family: 'Overpass Variable', sans-serif;"
  >
    <div class="flex flex-col min-h-svh">
      <Navigation />
      <main class="flex-1">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
